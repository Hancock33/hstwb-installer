; Amiga Boot Selector - DirOpus4
; -------------------------------
; Author: Henrik Noerfjand Stengaard
; Date:   2021-11-25

IF EXISTS SYS:Programs/DirOpus4
  Assign >NIL: EXISTS "DOPUS:"
  IF WARN
    Assign >NIL: DOPUS: SYS:Programs/DirOpus4
    Assign >NIL: C: DOPUS:C ADD
    Assign >NIL: Libs: DOPUS:Libs ADD
  ENDIF
  InitLib >NIL:
  DOPUS:DirectoryOpus
  Quit
ELSE
  REQUESTCHOICE "Error" "DirOpus4 is not installed in*N'SYS:Programs/DirOpus4'!" "OK" >NIL:
  wait 1
  totalreset
ENDIF
