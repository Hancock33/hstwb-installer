; Directory Opus 4
; ----------------
;
; Date: 2021-11-28
; Author: Henrik Noerfjand Stengaard
;
; User package for HstWB Installer to automate installation of Directory Opus 4.

; paths
set sdir "`execute INSTALLDIR:S/CombinePath "$INSTALLDIR" "S"`"

; ask install 68020 version
ask "Install 68020 version of Directory Opus? (Default=NO)"
if not warn
  ; write install status
  echo "Directory Opus 4.12 68000..."

  ; extract 
  unzip >NIL: -o "USERPACKAGEDIR:DOpus68000.zip" -d "$INSTALLDIR"
else 
  ; write install status
  echo "Directory Opus 4.17pre20 68020..."

  unzip >NIL: -o "USERPACKAGEDIR:DOpus68020.zip" -d "$INSTALLDIR"
endif 

; install directory opus configuration
Copy >NIL: "USERPACKAGEDIR:DirectoryOpus.CFG" "$sdir" CLONE


; end
; ---
LAB end
