; Detect Amiga OS 3.2.1 Modules
; -----------------------------
;
; Date: 2021-12-29
; Author: Henrik Noerfjand Stengaard
;
; AmigaDOS script to detect valid amiga os 3.2.1 modules floppy disk or adf file.

setenv modulesname ""
setenv modulesfile ""

; goto check modules, if volume name is "ModulesA500_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA500_3.2.1:"
  setenv modulesname "A500"
  setenv modulesfile "a500"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesA600_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA600_3.2.1:"
  setenv modulesname "A600"
  setenv modulesfile "a600"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesA1200_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA1200_3.2.1:"
  setenv modulesname "A1200"
  setenv modulesfile "a1200"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesA2000_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA2000_3.2.1:"
  setenv modulesname "A2000"
  setenv modulesfile "a2000"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesA3000_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA3000_3.2.1:"
  setenv modulesname "A3000"
  setenv modulesfile "a3000"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesA4000D_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA4000D_3.2.1:"
  setenv modulesname "A4000D"
  setenv modulesfile "a4000d"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesA4000T_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesA4000T_3.2.1:"
  setenv modulesname "A4000T"
  setenv modulesfile "a4000t"
  SKIP checkmodules
ENDIF

; goto check modules, if volume name is "ModulesCD32_3.2.1:"
IF "`Which $amigaosdisk:`" EQ "ModulesCD32_3.2.1:"
  setenv modulesname "CD32"
  setenv modulesfile "cd32"
  SKIP checkmodules
ENDIF

SKIP notvalid


; check modules
; -------------

LAB checkmodules

; check scsi device, if devs modules model exist
IF EXISTS "$amigaosdisk:DEVS/$modulesname"
  ; end, if scsi device doesn't exist
  IF NOT EXISTS "$amigaosdisk:DEVS/$modulesname/scsi.device"
    SKIP notvalid
  ENDIF

  ; end, if scsi device is greater than v47.4
  Version >NIL: "$amigaosdisk:DEVS/$modulesname/scsi.device" 47 5 FILE
  IF $RC EQ 0 VAL
    SKIP notvalid
  ENDIF

  ; end, if scsi device is less than v47.4
  Version >NIL: "$amigaosdisk:DEVS/$modulesname/scsi.device" 47 3 FILE
  IF NOT $RC EQ 0 VAL
    SKIP notvalid
  ENDIF
ENDIF

SKIP end


; not valid
; ---------
LAB notvalid

echo "Amiga OS 3.2.1 Modules is not valid"


; end
; ---

LAB end
