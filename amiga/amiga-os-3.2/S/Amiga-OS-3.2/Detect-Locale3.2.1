SKIP notvalid


; check locale
; -------------

LAB checklocale

; end, if workbench guide doesn't exist (locale language disk)
IF NOT EXISTS "$amigaosdisk:HELP/$localepath/Sys/Workbench.guide.Z"
  SKIP notvalid
ENDIF

; end, if shell guide doesn't exist (locale language disk)
IF NOT EXISTS "$amigaosdisk:HELP/$localepath/Sys/System/shell.guide.Z"
  SKIP notvalid
ENDIF

SKIP end


; not valid
; ---------
LAB notvalid

echo "Amiga OS 3.2.1 Locale is not valid"


; end
; ---

LAB end
